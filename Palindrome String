class Solution{
public:	
	
	
	int isPalindrome(string S)
	{
	    // Your code goes here
	    int l=0,f=0;
	    for(int i=0; S[i]!='\0'; i++)
	    {
	        l++;
	    }
	        for(int i=0,j=l-1; i<j; i++,j-- )
	        {
	            if(S[i]!=S[j])
	            {
	               f++;
	            }
	        }
	    if(f>=1)
	    return 0;
	    else 
	    return 1;
	}

};
