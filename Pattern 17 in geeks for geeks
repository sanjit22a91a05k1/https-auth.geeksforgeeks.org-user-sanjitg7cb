class Solution {
  public:
    void printTriangle(int n) {
         for(int i=1; i<=n; i++)
        {
            for(int l=1; l<=n-i; l++)
            {
                printf(" ");
            }
            for(int j=1; j<=i; j++)
            {
                printf("%c",j+64);
            }
        
            for(int k=i-1; k>=1; k--)
            {
                printf("%c",k+64);
            }
            printf("\n");
        }
    }
};
